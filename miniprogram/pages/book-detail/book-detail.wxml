<wxs src="../../until/filter.wxs" module="until" />

<view class="container">
    <view class="head">
        <image src="{{book.image}}" />
        <text class="title">{{book.title}}</text>
        <text class="author">{{book.author}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">短评</text>
        <text class="shadow" wx:if="{{comments==false}}">目前还没有短评，欢迎评论</text>
        <view class="comment-container">
            <block wx:for="{{until.limit(comments, 10)}}" wx:key="content">
                <tag-cmp tag-class="ex-tag" text="{{item.content}}">
                    <text class="num" slot="after">{{'+'+item.nums}}</text>
                </tag-cmp>
            </block>
        </view>
    </view>
    <view class="sub-container ">
        <text class="headline">内容简介</text>
        <text decode="{{true}}" class="content">{{until.format(book.summary)}}</text>
        <view class="sub-container">
            <text class="headline">书本信息</text>
            <view class="detail-container">
                <view class="vertical description">
                    <text>出版社</text>
                    <text>出版年</text>
                    <text>页数</text>
                    <text>定价</text>
                    <text>装帧</text>
                </view>
                <view class="vertical">
                    <text>{{book.publisher}}</text>
                    <text>{{book.pubdate}}</text>
                    <text>{{book.pages}}</text>
                    <text>{{book.price}}</text>
                    <text>{{book.binding}}</text>
                </view>
            </view>
        </view>
    </view>
</view>

<view class="post-container" wx:if="{{!posting}}">
    <view bind:tap="onFakePost" class="post-fake">
        <text>输入短评</text>
    </view>
    <view class="like-container">
        <like-cmp bind:like="onLike" class="like" like="{{likeStatue}}" count="{{likeCount}}" />
    </view>
</view>

<view class="posting-container" wx:if="{{posting}}">
    <view class="post-header">
        <text wx:if="{{comments==true}}">仅可点击标签+1</text>
        <text wx:else>暂无评论</text>
        <text class="cancel" bind:tap="onCancel">取消</text>
    </view>
    <view class="comment-container">
        <block wx:for="{{until.limit(comments, 3)}}" wx:key="content">
            <tag-cmp bind:tapping="onPost" tag-class="ex-tag" text="{{item.content}}">
                <text class="num" slot="after">{{'+'+item.nums}}</text>
            </tag-cmp>
        </block>
    </view>
    <input bindconfirm="onPost" class="post" placeholder="最多写12个字" />
</view>

<mask-cmp wx:if="{{posting}}"/>